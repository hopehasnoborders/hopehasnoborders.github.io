---
layout: layouts/base.njk
---
<article class="container mx-auto px-6 py-24 max-w-4xl">
  <div class="mb-12 text-center">
    <span class="text-xs font-bold uppercase tracking-widest text-yarrow mb-4 block">{{ date | date }}</span>
    <h1 class="text-4xl md:text-6xl font-serif mb-6">{{ title }}</h1>
    {% if description %}
    <p class="text-xl text-neutral-600 font-light max-w-2xl mx-auto">{{ description }}</p>
    {% endif %}
    {% if author %}
    <p class="text-sm text-neutral-400 mt-6 uppercase tracking-widest">By {{ author }}</p>
    {% endif %}
  </div>

  {% if image %}
  <div class="mb-12">
    <img src="{{ image }}" alt="{{ title }}" class="w-full h-auto rounded-sm shadow-xl" />
  </div>
  {% endif %}

  <div class="prose prose-lg mx-auto prose-neutral prose-headings:font-serif prose-a:text-yarrow hover:prose-a:text-black transition-colors">
    {{ content | safe }}
  </div>
  
  <div class="mt-16 pt-12 border-t border-neutral-200 text-center">
    <!-- Fallback to 'en' if lang is undefined/null -->
    <a href="/{{ lang if lang else 'en' }}/blog/" class="inline-block bg-white border border-neutral-300 px-8 py-4 rounded-sm text-xs font-bold uppercase tracking-widest hover:bg-black hover:text-white hover:border-black transition-all">Back to Blog</a>
  </div>
</article>
