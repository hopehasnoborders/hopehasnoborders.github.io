---
pagination:
  data: locales
  size: 1
  alias: lang
permalink: "/{{ lang }}/host/"
layout: layouts/base.njk
---

<div class="pt-32 pb-20 bg-neutral-900 text-white">
    <div class="container mx-auto px-6 text-center max-w-4xl">
        <span class="text-yarrow font-bold tracking-widest text-xs uppercase mb-4 block animate-in">{{ host[lang].hero_label }}</span>
        <h1 class="text-5xl md:text-7xl font-serif mb-8 leading-tight animate-in delay-100 text-white">{{ host[lang].hero_title }}</h1>
        <p class="text-xl text-neutral-400 font-light leading-relaxed max-w-2xl mx-auto animate-in delay-200">{{ host[lang].hero_text }}</p>
    </div>
</div>

<section class="py-24 bg-white">
    <div class="container mx-auto px-6 max-w-4xl">
        <div class="prose prose-lg prose-neutral mx-auto mb-16">
            <p>{{ host[lang].prose_p1 }}</p>
            <p>{{ host[lang].prose_p2 }}</p>
        </div>
        
        <div class="bg-neutral-50 p-10 border border-neutral-100 rounded-sm text-center">
            <h3 class="text-3xl font-serif mb-6">{{ host[lang].cta_title }}</h3>
            <p class="text-neutral-600 mb-8 max-w-lg mx-auto">{{ host[lang].cta_text }}</p>
            <a href="{{ host[lang].cta_link }}" target="_blank" class="inline-block bg-yarrow text-black px-10 py-4 rounded-sm text-xs font-bold uppercase tracking-widest hover:bg-black hover:text-white transition-all shadow-lg">{{ host[lang].cta_button }}</a>
        </div>
    </div>
</section>
