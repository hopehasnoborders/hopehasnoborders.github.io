---
pagination:
  data: locales
  size: 1
  alias: lang
permalink: "/{{ lang }}/volunteer/"
layout: layouts/base.njk
---

<!-- Hero -->
<div class="pt-32 pb-20 bg-neutral-900 text-white">
    <div class="container mx-auto px-6 text-center max-w-4xl">
        <span class="text-yarrow font-bold tracking-widest text-xs uppercase mb-4 block animate-in">{{ volunteer[lang].hero_label }}</span>
        <h1 class="text-5xl md:text-7xl font-serif mb-8 leading-tight animate-in delay-100 text-white">{{ volunteer[lang].hero_title }}</h1>
        <p class="text-xl text-neutral-400 font-light leading-relaxed max-w-2xl mx-auto animate-in delay-200">{{ volunteer[lang].hero_text }}</p>
    </div>
</div>

<!-- Main Content Grid -->
<section class="py-24 bg-white">
    <div class="container mx-auto px-6 grid lg:grid-cols-12 gap-12">
        
        <!-- Left Column: Content (8 cols) -->
        <div class="lg:col-span-8 space-y-20">
            
            <!-- Donate Requested Items -->
            <div id="items">
                <h2 class="text-3xl font-serif mb-8">{{ volunteer[lang].items_title }}</h2>
                <p class="text-neutral-600 font-light mb-8">{{ volunteer[lang].items_desc }}</p>
                
                <div class="grid md:grid-cols-2 gap-8">
                    {% for item in volunteer[lang].items_list %}
                    <div>
                        <h3 class="font-bold text-neutral-900 mb-2 flex items-center gap-2"><i data-lucide="{{ item.icon }}" class="w-4 h-4 text-yarrow"></i> {{ item.title }}</h3>
                        <ul class="text-sm text-neutral-600 space-y-1 list-disc list-inside ml-2">
                            {% for subitem in item.items %}
                            <li>{{ subitem }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endfor %}
                </div>
                
                <div class="mt-8">
                      <a href="mailto:{{ volunteer[lang].items_email }}" class="inline-flex items-center gap-2 text-yarrow font-bold uppercase tracking-widest text-xs hover:text-black transition-colors">
                        {{ volunteer[lang].items_cta }} <i data-lucide="arrow-right" class="w-4 h-4"></i>
                    </a>
                </div>
            </div>

            <!-- Professional Volunteerism -->
            <div id="professional">
                 <h2 class="text-3xl font-serif mb-8">{{ volunteer[lang].skills_title }}</h2>
                 <p class="text-neutral-600 font-light mb-6">{{ volunteer[lang].skills_desc }}</p>
                 
                 <div class="bg-neutral-50 border border-neutral-100 p-8 rounded-sm">
                    <ul class="space-y-4">
                        {% for skill in volunteer[lang].skills_list %}
                        <li class="flex items-start gap-3">
                            <i data-lucide="check-circle-2" class="w-5 h-5 text-yarrow mt-0.5"></i>
                            <div>
                                <strong class="block text-neutral-900">{{ skill.title }}</strong>
                                <span class="text-sm text-neutral-500">{{ skill.desc }}</span>
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                     <div class="mt-8">
                        <a href="mailto:{{ volunteer[lang].skills_email }}" class="inline-block bg-yarrow text-black px-8 py-4 rounded-sm text-xs font-bold uppercase tracking-widest hover:bg-black hover:text-white transition-all">
                            {{ volunteer[lang].skills_cta }}
                        </a>
                    </div>
                 </div>
            </div>

        </div>

        <!-- Right Column: Sidebar (4 cols) -->
        <div class="lg:col-span-4 space-y-8">
            
            <!-- Facebook / Immediate Opportunities -->
            <div class="bg-neutral-50 p-8 border border-neutral-100 rounded-sm">
                <h3 class="text-xl font-serif mb-6 text-neutral-900">{{ volunteer[lang].sidebar_title }}</h3>
                <p class="text-sm text-neutral-600 mb-6 leading-relaxed">{{ volunteer[lang].sidebar_desc }}</p>
                
                <ul class="space-y-3 mb-8">
                    {% for item in volunteer[lang].sidebar_list %}
                    <li class="flex items-center gap-2 text-sm text-neutral-600"><i data-lucide="facebook" class="w-4 h-4"></i> {{ item }}</li>
                    {% endfor %}
                </ul>

                <a href="https://www.facebook.com/" target="_blank" class="block w-full text-center bg-white border border-neutral-200 text-yarrow px-6 py-3 rounded-sm text-xs font-bold uppercase tracking-widest hover:bg-yarrow hover:text-black transition-all">
                    {{ volunteer[lang].sidebar_btn_fb }}
                </a>
            </div>

            <!-- Link to Programs (Forms) -->
            <div class="bg-neutral-900 text-white p-8 rounded-sm">
                <h3 class="text-xl font-serif mb-4">{{ volunteer[lang].calendar_title }}</h3>
                <p class="text-neutral-400 text-sm mb-6">{{ volunteer[lang].calendar_desc }}</p>
                <a href="{{ volunteer[lang].calendar_link_cpr }}" target="_blank" class="block w-full text-center border border-neutral-700 text-white px-6 py-3 rounded-sm text-xs font-bold uppercase tracking-widest hover:bg-white hover:text-black transition-colors mb-2">
                    {{ volunteer[lang].calendar_btn_cpr }}
                </a>
                 <a href="{{ volunteer[lang].calendar_link_clean }}" target="_blank" class="block w-full text-center border border-neutral-700 text-white px-6 py-3 rounded-sm text-xs font-bold uppercase tracking-widest hover:bg-white hover:text-black transition-colors">
                    {{ volunteer[lang].calendar_btn_clean }}
                </a>
            </div>

        </div>

    </div>
</section>
