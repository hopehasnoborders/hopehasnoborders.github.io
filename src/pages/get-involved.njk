---
pagination:
  data: locales
  size: 1
  alias: lang
permalink: "/{{ lang }}/get-involved/"
layout: layouts/base.njk
---

<!-- Hero -->
<div class="pt-32 pb-20 bg-neutral-900 text-white">
    <div class="container mx-auto px-6 text-center max-w-4xl">
        <span class="text-yarrow font-bold tracking-widest text-xs uppercase mb-4 block animate-in">{{ get-involved[lang].hero_label }}</span>
        <h1 class="text-5xl md:text-7xl font-serif mb-8 leading-tight animate-in delay-100 text-white">{{ get-involved[lang].hero_title }}</h1>
        <p class="text-xl text-neutral-400 font-light leading-relaxed max-w-2xl mx-auto animate-in delay-200">{{ get-involved[lang].hero_text }}</p>
    </div>
</div>

<!-- Pathways Grid -->
<section class="py-24 bg-white">
    <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-12">
            
            {% for path in get-involved[lang].pathways %}
            <div class="bg-neutral-50 p-10 border border-neutral-100 rounded-sm hover:shadow-lg transition-shadow group">
                <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center mb-6 shadow-sm group-hover:bg-orange-600 group-hover:text-white transition-colors">
                    <i data-lucide="{{ path.icon }}" class="w-6 h-6"></i>
                </div>
                <h3 class="text-2xl font-serif mb-4" id="{{ path.id }}">{{ path.title }}</h3>
                <p class="text-neutral-600 font-light mb-8">{{ path.desc }}</p>
                <a href="{{ path.link }}" class="inline-block px-6 py-3 border border-neutral-900 text-xs font-bold uppercase tracking-widest hover:bg-yarrow hover:text-black hover:border-yarrow transition-all">{{ path.cta }}</a>
            </div>
            {% endfor %}

            <!-- Volunteers -->
            <div class="bg-neutral-50 p-10 border border-neutral-100 rounded-sm hover:shadow-lg transition-shadow group md:col-span-2 lg:col-span-2">
                 <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center mb-6 shadow-sm group-hover:bg-yarrow group-hover:text-black transition-colors">
                    <i data-lucide="heart" class="w-6 h-6"></i>
                </div>
                <h3 class="text-2xl font-serif mb-4" id="volunteers">{{ get-involved[lang].volunteers_title }}</h3>
                <p class="text-neutral-600 font-light mb-8 max-w-2xl">{{ get-involved[lang].volunteers_desc }}</p>
                <a href="{{ get-involved[lang].volunteers_link }}" class="inline-block px-6 py-3 bg-neutral-900 text-white border border-neutral-900 text-xs font-bold uppercase tracking-widest hover:bg-yarrow hover:text-black hover:border-yarrow transition-all">{{ get-involved[lang].volunteers_cta }}</a>
            </div>

        </div>
    </div>
</section>
