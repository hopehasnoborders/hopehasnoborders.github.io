---
pagination:
  data: locales
  size: 1
  alias: lang
permalink: "/{{ lang }}/donate/"
layout: layouts/base.njk
---

<div class="pt-32 pb-20 bg-neutral-900 text-white">
    <div class="container mx-auto px-6 text-center max-w-4xl">
         <span class="text-yarrow font-bold tracking-widest text-xs uppercase mb-4 block animate-in">{{ donate[lang].hero_label }}</span>
        <h1 class="text-5xl md:text-7xl font-serif mb-8 leading-tight animate-in delay-100 text-white">{{ donate[lang].hero_title }}</h1>
        <p class="text-xl text-neutral-400 font-light leading-relaxed max-w-2xl mx-auto animate-in delay-200">{{ donate[lang].hero_text }}</p>
    </div>
</div>

<section class="py-24 bg-white text-center">
    <div class="container mx-auto px-6 max-w-2xl">
        <p class="text-lg text-neutral-600 font-light mb-12">{{ donate[lang].body_text }}</p>
        <a href="{{ donate[lang].cta_link }}" target="_blank" class="inline-block bg-yarrow text-black px-12 py-5 rounded-sm text-sm font-bold uppercase tracking-widest hover:bg-black hover:text-white transition-all shadow-xl">{{ donate[lang].cta_text }}</a>
    </div>
</section>

<!-- Shop Section -->
<section class="py-24 bg-neutral-50 border-t border-neutral-200">
    <div class="container mx-auto px-6 max-w-4xl">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-serif leading-tight text-neutral-900">{{ donate[lang].shop_title }}</h2>
        </div>

        <div class="grid md:grid-cols-1 gap-8 max-w-md mx-auto">
            {% for item in donate[lang].shop_items %}
            <div class="bg-white rounded-sm shadow-lg overflow-hidden border border-neutral-100 hover:shadow-xl transition-shadow">
                {% if item.image %}
                <div class="aspect-video overflow-hidden">
                    <img src="{{ item.image }}" alt="{{ item.name }}" class="w-full h-full object-cover">
                </div>
                {% else %}
                <div class="aspect-video bg-neutral-100 flex items-center justify-center">
                    <i data-lucide="shopping-bag" class="w-12 h-12 text-neutral-300"></i>
                </div>
                {% endif %}
                <div class="p-8 text-center">
                    <h3 class="text-2xl font-serif mb-2">{{ item.name }}</h3>
                    <p class="text-neutral-600 font-light text-sm mb-6">{{ item.desc }}</p>
                    <p class="text-3xl font-bold text-black mb-8">{{ item.price }}</p>
                    <a href="{{ donate[lang].cta_link }}" target="_blank" class="inline-block bg-black text-white px-8 py-4 rounded-sm text-xs font-bold uppercase tracking-widest hover:bg-yarrow hover:text-black transition-all w-full">{{ donate[lang].cta_text }} {{ item.price }}</a>
                    <p class="text-xs text-neutral-500 mt-6 italic">* Include your mailing address in the donation notes</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
