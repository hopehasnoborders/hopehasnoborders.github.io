---
pagination:
  data: locales
  size: 1
  alias: lang
permalink: "/{{ lang }}/programs/"
layout: layouts/base.njk
---

<div class="pt-32 pb-20 bg-neutral-900 text-white">
    <div class="container mx-auto px-6 text-center max-w-4xl">
        <span class="text-yarrow font-bold tracking-widest text-xs uppercase mb-4 block animate-in">{{ programs[lang].hero_label }}</span>
        <h1 class="text-5xl md:text-7xl font-serif mb-8 leading-tight animate-in delay-100 text-white">{{ programs[lang].hero_title }}</h1>
        <p class="text-xl text-neutral-400 font-light leading-relaxed max-w-2xl mx-auto animate-in delay-200">{{ programs[lang].hero_text }}</p>
    </div>
</div>

<section class="py-24 bg-white">
    <div class="container mx-auto px-6 max-w-5xl space-y-24">
        
        <!-- Program 1 -->
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
                <h3 class="text-3xl font-serif mb-6">{{ programs[lang].prog1_title }}</h3>
                <p class="text-neutral-600 font-light mb-6 leading-relaxed">{{ programs[lang].prog1_desc }}</p>
                <a href="{{ programs[lang].prog1_link }}" target="_blank" class="text-yarrow font-bold uppercase text-xs tracking-widest hover:text-black transition-colors flex items-center gap-2">{{ programs[lang].prog1_cta }} <i data-lucide="external-link" class="w-4 h-4"></i></a>
            </div>
            <div class="bg-neutral-50 p-8 rounded-sm border border-neutral-100">
                <i data-lucide="heart-handshake" class="w-12 h-12 text-yarrow mb-4"></i>
                 <p class="text-sm text-neutral-600 italic">{{ programs[lang].prog1_quote }}</p>
            </div>
        </div>

        <div class="h-px bg-neutral-100 w-full"></div>

         <!-- Program 2 -->
        <div class="grid md:grid-cols-2 gap-12 items-center">
             <div class="order-2 md:order-1 bg-neutral-50 p-8 rounded-sm border border-neutral-100">
                <ul class="space-y-4">
                    {% for link in programs[lang].prog2_links %}
                    <li>
                        <a href="{{ link.url }}" target="_blank" class="flex items-center justify-between group p-3 bg-white border border-neutral-200 hover:border-yarrow transition-colors">
                            <span class="font-medium text-sm">{{ link.text }}</span>
                            <i data-lucide="chevron-right" class="w-4 h-4 text-neutral-400 group-hover:text-yarrow"></i>
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="order-1 md:order-2">
                <h3 class="text-3xl font-serif mb-6">{{ programs[lang].prog2_title }}</h3>
                <p class="text-neutral-600 font-light mb-6 leading-relaxed">{{ programs[lang].prog2_desc }}</p>
            </div>
        </div>

         <div class="h-px bg-neutral-100 w-full"></div>

         <!-- Program 3 -->
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
                <h3 class="text-3xl font-serif mb-6">{{ programs[lang].prog3_title }}</h3>
                <p class="text-neutral-600 font-light mb-6 leading-relaxed">{{ programs[lang].prog3_desc }}</p>
                 <a href="{{ programs[lang].prog3_link }}" target="_blank" class="text-yarrow font-bold uppercase text-xs tracking-widest hover:text-black transition-colors flex items-center gap-2">{{ programs[lang].prog3_cta }} <i data-lucide="external-link" class="w-4 h-4"></i></a>
            </div>
             <div class="bg-neutral-50 p-8 rounded-sm border border-neutral-100">
                <h4 class="font-serif text-lg mb-4">{{ programs[lang].prog3_sub_title }}</h4>
                <p class="text-sm text-neutral-500 mb-4">{{ programs[lang].prog3_sub_desc }}</p>
                <div class="flex gap-4">
                    {% for tag in programs[lang].prog3_tags %}
                    <span class="px-3 py-1 bg-white border border-neutral-200 text-xs text-neutral-600 rounded-full">{{ tag }}</span>
                    {% endfor %}
                </div>
            </div>
        </div>

    </div>
</section>
