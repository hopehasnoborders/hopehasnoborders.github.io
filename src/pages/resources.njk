---
pagination:
  data: locales
  size: 1
  alias: lang
permalink: "/{{ lang }}/resources/"
layout: layouts/base.njk
---

<div class="pt-32 pb-20 bg-neutral-900 text-white">
    <div class="container mx-auto px-6 text-center max-w-4xl">
        <span class="text-yarrow font-bold tracking-widest text-xs uppercase mb-4 block animate-in">{{ resources[lang].hero_label }}</span>
        <h1 class="text-5xl md:text-7xl font-serif mb-8 leading-tight animate-in delay-100 text-white">{{ resources[lang].hero_title }}</h1>
        <p class="text-xl text-neutral-400 font-light leading-relaxed max-w-2xl mx-auto animate-in delay-200">{{ resources[lang].hero_text }}</p>
    </div>
</div>

<section class="py-24 bg-white">
    <div class="container mx-auto px-6 max-w-4xl">
         <div class="grid gap-8">
             
             {% for item in resources[lang].resources_list %}
             <!-- Resource Item -->
             <div class="p-8 border border-neutral-200 rounded-sm hover:border-yarrow transition-colors group">
                 <div class="flex items-start justify-between">
                     <div>
                         <h3 class="text-2xl font-serif mb-2">{{ item.title }}</h3>
                         <p class="text-neutral-600 font-light mb-4">{{ item.desc }}</p>
                     </div>
                     <i data-lucide="{{ item.icon }}" class="w-8 h-8 text-neutral-300 group-hover:text-yarrow transition-colors"></i>
                 </div>
                 <a href="{{ item.link }}" class="text-xs font-bold uppercase tracking-widest text-yarrow hover:text-black">{{ item.cta }}</a>
             </div>
             {% endfor %}

         </div>
    </div>
</section>
